#-------------- Variavel Global -----------------------

sec = 0
treino = 0
cadAlunos = []
treinoAlunos = []

# ------------- CLASSES --------------
class Aluno():
  nome = None
  cpf = None
  peso = 0
  altura = 0

class Exercicio():
  nomeExercicio = None
  numRepeticoes = 0
  pesoExercicio = 0

# ------------- FUNÇÕES -----------------

def menuprinc():
  print('''\nBem vindo a Academia No pain No gain
  Oque gostaria de fazer hoje?
  [1] Cadastrar Aluno
  [2] Gerenciar Treino
  [3] Consultar Aluno
  [4] Atualizar Cadastro
  [5] Excluir Aluno
  [6] Relatorio de Alunos
  [0] Sair''')
  sec = int(input(' Digite o numero seção: '))
  return sec

def cadastroalun():
  for i in range(1):
    a = Aluno()
    a.nome = input('\nInsira o Nome do Aluno: ')
    a.cpf = int(input('Insira o cpf do Aluno: '))
    a.peso = float(input('Insira o Peso do Aluno: '))
    a.altura = float(input('Insira a Altura do Aluno: '))
    cadAlunos.append(a)
    treinoAlunos.append([])

def menutreino():
  print('''\nOque deseja realizar?
  [1] Incluir um novo Exercício
  [2] Alterar um Exercício
  [3] Excluir um Exercício
  [4] Excluir Todos os Exercícios
  [0] Retornar ao Menu Principal''')
  treino = int(input())
  return treino

def exercicio():
  for i in range(1):
    exer = Exercicio()
    exer.nomeExercicio = input('Digite o Nome do Exercicio: ')
    exer.numRepeticoes = int(input('Digite o Numero de Repetições: '))
    exer.pesoExercicio = float(input('Digite o Peso para o Exercicio: '))
    treinoAlunos.append(exer)

#--------------------- CÓDIGO ------------------------------
while True:
  sec = menuprinc()
  if sec == 1:
    cadastroalun()
  elif sec == 2:
    while True:
      treino = menutreino()
      if treino == 1:
        exercicio()
      #elif treino == 2:
      #elif treino == 3:
      #elif treino == 4:
      elif treino == 0:
        break
        menuprinc()
      #else:
        print('seção Invalida, Digite um Valor Valido')
        continue
  #elif sec == 3:
  #elif sec == 4:
  #elif sec == 5:
  #elif sec == 6:
  elif sec == 0:
    break
  else:
    print('\nSeção Invalida, Digite um Valor Valido')
    continue
